<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondos"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:text="Select the correct Color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_p1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="P1:0" />

        <TextView
            android:id="@+id/txt_p2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:text="P2:0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/one" />

        <ImageButton
            android:id="@+id/btn_2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/one" />

        <ImageButton
            android:id="@+id/btn_3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/one" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_numero"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="10dp"
        android:background="#BDBDBD"
        android:gravity="center"
        android:src="@drawable/dado1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/one" />

        <ImageButton
            android:id="@+id/btn_5"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/one" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn12"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ovalo"
        android:backgroundTint="@color/design_default_color_secondary"
        android:tint="@color/design_default_color_on_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</LinearLayout>